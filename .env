# Flask Secret Key
FLASK_SECRET_KEY=your_flask_secret_key_here

# AWS Configuration
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# DynamoDB Table Names
DYNAMODB_TABLE_USERS=MedTrackUsers
DYNAMODB_TABLE_APPOINTMENTS=MedTrackAppointments

# SNS Topic ARN
SNS_TOPIC_ARN=arn:aws:sns:ap-south-1:123456789012:MedTrackTopic

# SMTP Email Configuration (for Gmail or similar)
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_app_password   # Use app password, not your main password
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=465
